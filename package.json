{
  "name": "dayjot-mono",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@4.0.0-rc.40",
  "engines": {
    "node": ">= 20"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*",
      "shared"
    ]
  },
  "scripts": {
    "--deps--": "",
    "upgrade-deps": "yarn upgrade-interactive",
    "upgrade-nx": "nx migrate latest && nx migrate --run-migrations",
    "check-constraints": "yarn constraints",
    "doctor": "yarn dlx @yarnpkg/doctor",
    "--dev--": "",
    "dev": "nx run-many --target dev --output-style stream  --exclude @supastack/root",
    "graph": "nx graph",
    "clean": "rm -r **/node_modules && rm -r **/dist && rm -r **/build",
    "lint": "nx run-many --target lint --exclude @supastack/root",
    "lint.fix": "yarn lint --fix && prettier --ignore-path .eslintignore shared --write \"**/*.{ts,tsx}\";",
    "test": "nx run-many --target test --exclude @supastack/root",
    "typecheck": "nx run-many --target typecheck --exclude @supastack/root"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231016.0",
    "@types/node": "^20.8.7",
    "@types/react": "18.2.30",
    "@types/react-dom": "18.2.14",
    "happy-dom": "^12.9.1",
    "jsdom": "22.1.0",
    "nx": "16.10.0",
    "nx-cloud": "16.5.2",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "--https://fig.io/docs/guides/autocomplete-for-npm-scripts#adding-the-fig-object--": "",
  "fig": {
    "dev": {
      "description": "Start everything for local development",
      "icon": "‚≠êÔ∏è",
      "priority": 100
    },
    "test": {
      "description": "Test everything",
      "icon": "üß™",
      "priority": 80
    },
    "lint": {
      "description": "Lint everything",
      "icon": "üöß",
      "priority": 70
    },
    "upgrade-deps": {
      "description": "Use this to upgrade any deps except NX",
      "icon": "‚è´",
      "priority": 60
    },
    "upgrade-nx": {
      "description": "Use this to upgrade and migrate NX",
      "icon": "‚§¥Ô∏è",
      "priority": 59
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "trailingComma": "all",
    "proseWrap": "always",
    "singleQuote": true,
    "tailwindFunctions": [
      "tw",
      "tx"
    ],
    "overrides": [
      {
        "files": "package*.json",
        "options": {
          "printWidth": 1000
        }
      }
    ]
  }
}
